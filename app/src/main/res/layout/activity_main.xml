<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context="com.example.vasuchand.mobilecomputing.MainActivity">



        <android.support.v7.widget.CardView

            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:layout_marginTop="40dp"
            card_view:cardCornerRadius="2dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            android:gravity="center_horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Prime or Not"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:background="@drawable/boundary2"
                    android:layout_marginBottom="5dp"
                    >

                </TextView>

                <FrameLayout

                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="@drawable/boundary"
                    >
                    <TextView
                        android:text=""
                        android:textSize="64sp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/t1"/>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Correct"
                        android:layout_weight="1"
                        android:padding="12dp"
                        android:textSize="18sp"
                        android:textColor="#00FF00"
                        android:id="@+id/t2"
                        android:layout_marginLeft="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Incorrect"
                        android:padding="12dp"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:textColor="#FA8E2A"
                        android:id="@+id/t3"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next"
                        android:layout_weight="1"
                        android:padding="12dp"
                        android:textSize="18sp"
                        android:textColor="#089DE3"
                        android:id="@+id/t4"/>
                </LinearLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView

                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text=" "
                android:textSize="64sp"
                android:gravity="center"
                android:id="@+id/result"
                />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
